<UserControl x:Class="Vs_Toemrer_Lagerstyringssystemsprojekt.View.ProjectsDisplayInformation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vs_Toemrer_Lagerstyringssystemsprojekt.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid>
        <StackPanel>
            <Label Content="{Binding SelectedItem.Title, ElementName=ProjectsListBox}" FontSize="16" FontWeight="Bold" />
            <Label Content="{Binding SelectedItem.Price, ElementName=ProjectsListBox}" />
            <Label Content="{Binding SelectedItem.Address, ElementName=ProjectsListBox}" />
            <Label Content="{Binding SelectedItem.Description, ElementName=ProjectsListBox}" />
        </StackPanel>

    </Grid>
</UserControl>
