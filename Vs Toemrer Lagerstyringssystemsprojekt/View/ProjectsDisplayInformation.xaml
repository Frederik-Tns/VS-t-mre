<UserControl x:Class="Vs_Toemrer_Lagerstyringssystemsprojekt.View.ProjectsDisplayInformation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vs_Toemrer_Lagerstyringssystemsprojekt.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid>

        <Label x:Name="ProjectTitle" Content="{Binding SelectedProject.Title}" Height="30" Width="100" Margin="-250,50,0,0" Background="LightGray"/>
        <Label x:Name="ProjectOffer" Content="{Binding SelectedProject.Offer}" Height="30" Width="100" Margin="250,-50,0,0" Background="LightGray"/>
        <Label x:Name="ProjectAddress" Content="{Binding SelectedProject.Address}" Height="30" Width="100" Margin="-250,-50,0,0" Background="LightGray"/>
        <Label x:Name="ProjectProjectDescription" Content="{Binding SelectedProject.ProjectDescription}" Height="30" Width="100" Margin="250,50,0,0" Background="LightGray"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,349,0,0" TextWrapping="Wrap" Text="{Binding SelectedProject}" VerticalAlignment="Top" Height="74" Width="250" Background="LightGray"/>


    </Grid>


</UserControl>
